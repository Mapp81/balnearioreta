---
import {Image} from "astro:assets";
import logoreta3 from "/AnitaSecretCode/AnitaSecretCode/NuevaReta/nuevoreta/src/assets/logoreta3.png";
---
<header>
<nav class="nav">
    <div class="menu__logo">
      <a href="/"><Image src={logoreta3} alt="Reta" height="150" width="150" /></a>
    </div>
    <input type="checkbox" id="nav__checkbox" class="nav__checkbox" />
    <label for="nav__checkbox" class="nav__toggle">
      <svg class="menu" viewBox="0 0 448 512" width="40" aria-hidden="true">
        <path
          d="M16 132h416c8.837 0 16-7.163 16-16V76c0-8.837-7.163-16-16-16H16C7.163 60 0 67.163 0 76v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16z"
        ></path>
      </svg>
      <svg class="close" viewBox="0 0 384 512" width="40" aria-hidden="true">
        <path
          d="M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z"
        ></path>
      </svg>
    </label>
    
    <ul class="nav__menu">
      <li><a href="/#Galeria">Galeria</a></li>
      <li><a href="/Ubicacion">Ubicación</a></li>
      <li><a href="/Contacto">Contacto</a></li>
    </ul>
  </nav>
</header>
  <style>
  
    .nav{
      max-width: 100%;
      height: auto;
      margin: 4%;

      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      align-content: center;

      font-size: 16px; /* Tamaño del texto responsivo */ 
      font-family: "roboto", sans-serif;
      letter-spacing: 5px;
      font-weight: 300; 
      color: var(--primario);

    }
  
    .menu__logo {
      z-index: 2;
    }
  
    a {
      display: block;
      text-decoration: none;
    }
  
    .nav__checkbox {
      display: none;
    }
  
    .nav__toggle {
      display: none;
    }
  
    .nav__toggle svg {
      fill: var(--gris);
      width: 30px;
      height: 30px;
    }
  
    .nav__menu {
      display: flex;
      align-items: center;
      margin: 0;
      padding: 0;
      list-style: none;
      gap: 8px;

    }
  
    .nav__menu li {
      margin: 16px;
    }
  
    .nav__menu a {
      transition: all 0.3s ease;
    }
  
    .nav__menu a:hover {
      background-color: var(--base);
      border-radius: 8px;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }
  
    @media (max-width: 768px) {
      .nav__toggle {
        display: block;
        cursor: pointer;
        z-index: 2;
      }
  
      .nav__menu {
        position: fixed;
        top: 0;
        right: -100%;
        width: 70%;
        height: auto;
        line-height: 0.4;

        background-color: transparent;
        flex-direction: column;
        justify-content: center;
        transition: right 0.3s ease;
        z-index: 1;
        font-family: "roboto", sans-serif;
      letter-spacing: 5px;
      font-weight: 300; 
      color: var(--primario);
      }
  
      .nav__checkbox:checked ~ .nav__menu {
        right: 0;
      }
  
      .nav__toggle .menu {
        display: block;
      }
  
      .nav__toggle .close {
        display: none;
      }
  
      .nav__checkbox:checked ~ .nav__toggle .menu {
        display: none;
      }
  
      .nav__checkbox:checked ~ .nav__toggle .close {
        display: block;
      }
  
      .nav__menu li {
        transform: none;
      }
  
      .nav__menu a {
        font-size: 16px;
        max-width: 100%;
        text-align: center;
      }
    }
  </style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navCheckbox = document.getElementById("nav__checkbox") as HTMLInputElement;

    window.addEventListener("scroll", () => {
      if (navCheckbox && (navCheckbox as HTMLInputElement).checked) {
        navCheckbox.checked = false;
      }
    });
  });
</script>